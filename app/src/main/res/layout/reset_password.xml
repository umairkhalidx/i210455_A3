<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#def8f8"
    >

    <ImageButton
        android:id="@+id/back_btn_reset"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:src="@drawable/back_arrow"
        android:background="#def8f8"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/reset_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password?"
        android:textSize="28dp"
        android:textColor="#157177"
        android:textStyle="bold"
        android:layout_gravity="left"
        android:layout_marginLeft="34dp"
        >
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type a new password and re-enter the\npassword. Type something you will\nremember!"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_gravity="left"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="12dp"
        >
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Email"
        android:textSize="16dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="30dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/textbox_round_corners"
        android:hint="Enter Email"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="6dp"
        android:paddingLeft="12dp"
        >

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="34dp"
        android:textColor="@color/black"
        android:text="Confirm Password"
        android:textSize="16dp"
        android:layout_marginTop="16dp"
        >

    </TextView>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/textbox_round_corners"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="30dp"
        android:hint="Re-enter password"
        android:paddingLeft="12dp"
        >

    </EditText>

    <Button
        android:id="@+id/reset_btn"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:layout_marginTop="42dp"
        android:backgroundTint="#157177"
        android:text="Reset Password"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        android:textStyle="bold"
        android:textSize="16dp"
        >

    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="6dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember your password?  "
            android:textColor="@color/black"
            >
        </TextView>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#157177"
            android:clickable="true"
            android:onClick="onTextClick"
            />

    </LinearLayout>

</LinearLayout>