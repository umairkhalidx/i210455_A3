<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#def8f8"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="36"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp"
        android:backgroundTint="#50c2c9"
        android:layout_marginTop="-22dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="14dp"
                android:layout_weight="78"
                >

                <ImageButton
                    android:id="@+id/back_arrow"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="94dp"
                    android:background="#50c2c9"
                    android:src="@drawable/back_arrow" />

                <TextView
                    android:id="@+id/txt_hi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/back_arrow"
                    android:layout_marginTop="-96dp"
                    android:text="Hi, I'm"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

                <TextView
                    android:id="@+id/txt_username_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_hi"
                    android:layout_marginTop="0dp"
                    android:text="John Cooper"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="20dp"
                    >

                </TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginBottom="40dp"
                    android:backgroundTint="#80dad4"
                    app:cardCornerRadius="40dp">

                    <ImageButton
                        android:layout_width="82dp"
                        android:layout_height="90dp"
                        android:layout_gravity="center"
                        android:backgroundTint="#80dad4"
                        android:src="@drawable/filled_white_circle"
                        app:cornerRadius="30dp">

                    </ImageButton>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="18dp"
                android:layout_weight="20"

                >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#80dad4" />

                <Button
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drop me a review"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:backgroundTint="@android:color/transparent"
                    android:padding="1dp"
                    android:layout_marginTop="2dp"
                    >

                </Button>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/textView7"
                    android:src="@drawable/add_reaction"
                    android:layout_centerVertical="true"
                    >


                </ImageView>

            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="67"
        android:background="#def8f8"
        android:orientation="vertical"
        >


            <EditText
                android:id="@+id/txt_type"
                android:layout_width="320dp"
                android:layout_height="160dp"
                android:background="@drawable/rectangle"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:hint="Type your experience . ."
                android:gravity="top"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                >

            </EditText>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/txt_type"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/star_btn"
                >
            </ImageView>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/star_btn"
                >
            </ImageView>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/star_btn"
                >
            </ImageView>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/star_btn"
                >
            </ImageView>

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/star_btn"
                >
            </ImageView>

        </LinearLayout>


        <Button
            android:id="@+id/feedback_btn"
            android:layout_width="330dp"
            android:layout_height="54dp"
            android:backgroundTint="#157177"
            android:text="Submit Feedback"
            android:textColor="@color/white"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            >

        </Button>

    </RelativeLayout>


</LinearLayout>