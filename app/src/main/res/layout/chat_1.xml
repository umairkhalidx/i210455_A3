<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#def8f8"
    >

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_marginTop="-14dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:background="#50c2c9">

                <ImageButton
                    android:id="@+id/back_btn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#50c2c9"
                    android:src="@drawable/arrow_back_white"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="10dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Cooper"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="70dp"
                    >

                </TextView>


                <ImageButton
                    android:id="@+id/audiocall_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/call_filled_white"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginBottom="22dp"
                    >

                </ImageButton>

                <ImageButton
                    android:id="@+id/videocall_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/videocam_filled_white"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_marginBottom="22dp"
                    >

                </ImageButton>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="64"
            android:orientation="horizontal"
            android:background="#def8f8"
            >

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            app:cardCornerRadius="22dp"
            app:cardElevation="0dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="4dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="top"
                android:background="#50c2c9">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attach_file_btn"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingLeft="14dp"
                >

                </ImageButton>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gallery_btn"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp"
                    >

                </ImageButton>

                <EditText
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:hint="Type Something"
                    android:textColorHint="@color/white"
                    android:gravity="top"
                    android:textSize="14sp"
                    android:background="@null"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="6dp"
                    >

                </EditText>

                <ImageButton
                    android:id="@+id/photo_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/camera_btn"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp"
                    >

                </ImageButton>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mic_btn"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp"

                    >

                </ImageButton>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send_btn"
                    android:background="@android:color/transparent"
                    android:paddingTop="12dp"
                    android:paddingLeft="8dp"
                    >

                </ImageButton>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#157177"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/home_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home"
                    android:scaleType="fitCenter"
                    android:background="#157177"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/search_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:scaleType="fitCenter"
                    android:background="#157177"
                    >

                </ImageButton>

                <TextView
                    android:id="@+id/search_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                android:backgroundTint="@color/black"
                >
                <!--            android:background="@drawable/rounded_layout"-->

                <!--            <ImageButton-->
                <!--                android:layout_width="60dp"-->
                <!--                android:layout_height="40dp"-->
                <!--                android:src="@drawable/add_circle"-->
                <!--                android:scaleType="fitCenter"-->
                <!--                android:background="#157177"-->
                <!--                android:layout_marginTop="-8dp"-->
                <!--                >-->

                <!--            </ImageButton>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/chat_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chat"
                    android:scaleType="fitCenter"
                    android:background="#157177"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/chat_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/profile_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#157177"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/profile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_layout"
        >

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/add_circle"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            >

        </ImageButton>

    </LinearLayout>

</RelativeLayout>