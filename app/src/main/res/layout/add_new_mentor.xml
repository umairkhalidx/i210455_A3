<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#def8f8"
    >



    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="22"
            android:orientation="horizontal"
            android:background="#def8f8"
            >


            <ImageView
                android:id="@+id/Circle1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/circle"
                android:layout_marginTop="-50dp">

            </ImageView>

            <ImageView
                android:id="@+id/Circle2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/circle"
                android:layout_marginStart="-70dp"
                >

            </ImageView>

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow"
                android:background="@android:color/transparent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="40dp"
                />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/back_btn"
                >

                <TextView
                    android:id="@+id/txt_add_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="12dp"
                    android:text="Add New Mentor"
                    android:textColor="#157177"
                    android:textSize="26sp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_add_new"
                    android:layout_marginLeft="118dp"
                    android:text="Help us expand!"
                    android:textColor="#157177"
                    android:textSize="16sp"
                    >

                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="73"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            android:layout_marginBottom="-19dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="top"
                android:background="#50c2c9">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    >

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/textbox_dotted"
                        >

<!-- android:onClick="Function_name" write this in the above layout to make it clickable-->

                        <ImageButton
                            android:id="@+id/video_image"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/videocam_filled_green"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            >
                        </ImageButton>

                        <TextView
                            android:id="@+id/video_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Video"
                            android:textSize="12sp"
                            android:textColor="#157177"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            >

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="80dp"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/textbox_dotted"
                        android:layout_marginLeft="50dp"
                        >
                        <ImageButton
                            android:id="@+id/camera_image"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:src="@drawable/camera_green"
                            android:scaleType="fitCenter"
                            android:background="@android:color/transparent"
                            >
                        </ImageButton>

                        <TextView
                            android:id="@+id/camera_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Photo"
                            android:textSize="12sp"
                            android:textColor="#157177"
                            android:layout_marginTop="4dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            >

                        </TextView>

                    </LinearLayout>

                </LinearLayout>


                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="@color/white"
                android:text="Name"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                >

            </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/textbox_round_corners"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="30dp"
                    android:hint="Enter Name"
                    android:paddingLeft="10dp"
                    >

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:text="Description"
                    android:textSize="16dp"
                    >

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/textbox_round_corners"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="30dp"
                    android:hint="Enter Description"
                    android:paddingLeft="10dp"
                    >

                </EditText>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/white"
                    android:text="Status"
                    android:textSize="16dp"
                    >

                </TextView>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@drawable/textbox_round_corners"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="30dp"
                    android:hint="Available"
                    android:paddingLeft="10dp"
                    >

                </EditText>

                <Button
                    android:id="@+id/upload_btn"
                    android:layout_width="338dp"
                    android:layout_height="54dp"
                    android:backgroundTint="#157177"
                    android:text="Upload"
                    android:textColor="@color/white"
                    app:cornerRadius="8dp"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    >

                </Button>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:background="#157177"
            android:orientation="horizontal"
            android:weightSum="100"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/home_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/home"
                    android:scaleType="fitCenter"
                    android:background="#157177"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/search_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/search"
                    android:scaleType="fitCenter"
                    android:background="#157177"
                    >

                </ImageButton>

                <TextView
                    android:id="@+id/search_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                android:backgroundTint="@color/black"
                >
                <!--            android:background="@drawable/rounded_layout"-->

                <!--            <ImageButton-->
                <!--                android:layout_width="60dp"-->
                <!--                android:layout_height="40dp"-->
                <!--                android:src="@drawable/add_circle"-->
                <!--                android:scaleType="fitCenter"-->
                <!--                android:background="#157177"-->
                <!--                android:layout_marginTop="-8dp"-->
                <!--                >-->

                <!--            </ImageButton>-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/chat_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:src="@drawable/chat"
                    android:scaleType="fitCenter"
                    android:background="#157177"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/chat_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:orientation="vertical"
                >


                <ImageButton
                    android:id="@+id/profile_btn"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:background="#157177"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile"

                    >

                </ImageButton>

                <TextView
                    android:id="@+id/profile_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="10sp"
                    android:layout_marginTop="-4dp"
                    android:textColor="#def8f8"
                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_layout"
        >

        <ImageButton
            android:id="@+id/plus_btn"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:src="@drawable/add_circle"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            >

        </ImageButton>

    </LinearLayout>

</RelativeLayout>